# Based on the default i3blocks config file.
# This bar shows some stats that you normally
# don't need to see all the time (CPU/GPU temp,
# memory/CPU load etc)
# Uses scripts stored in ~/.i3/scrpits/

full_text= 
align=center
color=#FFFFFF
separator=false
separator_block_width=6

[separator]

[cpu_temp_text]
full_text=
separator=false
color=#3e90ee

[cpu_temp]
command=~/.i3/scripts/cpu_temp.sh
interval=2
separator=false

[separator]

[gpu_temp_text]
full_text=
separator=false
color=#3e90ee

[gpu_temp]
command=~/.i3/scripts/gpu_temp.sh
interval=2
separator=false

[separator]

[fan_text]
full_text=
separator=false
color=#3e90ee

[fan]
command=~/.i3/scripts/fan_speed.sh
interval=2
separator=false

[separator]

[mem_text]
full_text=
separator=false
color=#3e90ee

[mem]
command=~/.i3/scripts/free_memory.sh
interval=2
separator=false

[separator]

[disk_text]
full_text=
separator=false
color=#3e90ee

[disk]
command=~/.i3/scripts/free_disk_space.sh
interval=60
separator=false

[separator]

[load_text]
full_text=
separator=false
color=#3e90ee

[load]
command=~/.i3/scripts/cpu_load.sh
interval=2
separator=false

[separator]
